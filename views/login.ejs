<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col"><%- include('./partials/navbar') %></div>
      </div>
      <div class="row">
        <div class="col"></div>
        <div class="col">
          <div class="container m-4">
            <form action="/login" method="POST">
              <div class="mb-3"><h1>Login</h1></div>
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  name="username"
                  id="username"
                  class="form-control"
                  required
                  minlength="6"
                  maxlength="30"
                />
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  name="password"
                  id="password"
                  class="form-control"
                  required
                  minlength="6"
                  maxlength="1024"
                />
              </div>
              <div>
                <button type="submit" class="btn btn-primary">Login</button>
              </div>
            </form>
          </div>
        </div>
        <div class="col"></div>
      </div>

      <%- include('./partials/scripts') %>
    </div>
  </body>
</html>
