<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col"><%- include('./partials/navbar') %></div>
      </div>
      <div class="row">
        <div class="col"></div>
        <div class="col">
          <div class="container m-4">
            <form action="/register" method="POST" id="register">
              <div class="mb-3"><h1>Register</h1></div>
              <div class="mb-3">
                <small></small>
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  name="username"
                  id="username"
                  class="form-control"
                  required
                  minlength="6"
                  maxlength="30"
                />
              </div>
              <div class="mb-3">
                <small></small>
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  name="password"
                  id="password"
                  class="form-control"
                  required
                  minlength="6"
                  maxlength="1024"
                />
              </div>
              <div class="mb-3">
                <small></small>
                <label for="email" class="form-label">Email address</label>
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="form-control"
                  required
                  aria-describedby="emailHelp"
                />
                <div id="emailHelp" class="form-text">
                  We'll never share your email with any 3rd parties
                </div>
              </div>
              <div>
                <input
                  type="submit"
                  value="Register"
                  class="btn btn-primary"
                  onclick="validate"
                />
              </div>
            </form>
          </div>
        </div>
        <div class="col"></div>
      </div>

      <%- include('./partials/scripts') %>
    </div>
  </body>
</html>
